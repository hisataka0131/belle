<div class="container">

      <div class="row">



          
                <h1 class="heads">TALK</h1>

      </div>


          <div class="row">


                



                    
                            <% if @messages.present? %>
                

                            
                        

                                  <% @messages.each do |m| %>
                                  <div class="title">
                                      <table>
                                        <tr class="layout">
                                          <th class="col-xs-2 col-sm-2 col-md-2 thead-content">
                                            <%= attachment_image_tag @message.stylist, :stylist_image, :fill, 100, 100, format: 'jpeg', fallback: "/assets/stylist-fallback.jpeg", class: "thead-img" %>

                                            <p><%= m.stylist.stylist_name %></p>
                                            <p><%= m.created_at.strftime('%Y/%m/%d') %></p>
                                          </th>
                                      
                                          <td class="col-xs-9 col-sm-9 col-md-9"><%= m.content %></td>
                                        </tr>
                                      </table>
                                  </div>

          
                                    
                                  <% end %>


                            <% else %>

                                  <h3>メッセージはまだありません</h3>

                            <% end %>
                           

          </div>


          <div class="row">
                
                        <%= form_for @message do |f| %>
                          <%= f.text_field :content, :placeholder => "メッセージを入力して下さい" , :size => 70, class: "form-control" %>
                          <%= f.hidden_field :room_id, :value => @room.id %>
                          <br>
                          <%= f.submit "送信", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
                        <% end %>

          </div>

                        <%= link_to "スタイリスト一覧に戻る", root_path %>



              
          




          


</div>