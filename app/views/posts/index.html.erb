<h1>投稿一覧</h1>
<% @posts.each do |post| %>
  <div class="post">
    <div class="blockarea">

  <%= attachment_image_tag post, :post_image, :fill, 300, 300, format: 'jpeg' %>

  <div class="caparea1">
    <P><%= post.post_name %></P>
    <p><%= post.post_opinion %></p>
    <p><%= post.stylist.stylist_name %></p>
    <p><%= post.stylist.salon_name %></p>

  </div>
     </div>
   </div>
<% end %>




