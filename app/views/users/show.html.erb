
<div class="container ind">

    <div class="row">

      <div class="col-xs-12 col-lg-6 col-sm-6 profile-img">

            <div class="row">


                <%= attachment_image_tag @user, :user_image, :fill, 300, 300, format: 'jpeg', fallback: "/assets/user_image.jpeg", class: "stylist-pro" %> 



            </div>



            <div class="fallows row">
                
                          <div class="favorites">

                            
                             <p>follow <%= @user.follows.count%>    favorite <%= @user.favorites.count%></p>
                          </div>

          </div>

      </div>

      <div class="col-lg-6 col-sm-6 profile">
          <table class="table stylist-table">
            <tr><th class="stylist-table">名前</th><td><%= @user.user_name %></td></tr>
            <tr><th>性別</th><td><%= @user.user_sex %></td></tr>
            <tr><th>年齢</th><td><%= @user.user_age %> 歳</td></tr>
            <tr><th>住まい</th><td><%= @user.user_region %></td></tr>
            <tr><th>趣味</th><td><%= @user.user_hobby %></td></tr>
            <tr><th>自己紹介</th><td><%= @user.user_introduction %></td></tr>

        </table>

          
      </div>


    </div>


    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-6 talks">
      

          <% if current_user %>


            <button type="button" id="sampleButton2" class="btn btn-primary btn-lg">
            トーク
          </button>

          <!-- モーダル・ダイアログ -->
          <div class="modal fade" id="sampleModal2" tabindex="-1">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal"><span>×</span></button>
                  <h4 class="modal-title">TALK</h4>
                </div>
                <div class="modal-body">
                  <% @chats.each do |chat| %>
                  <table>
                    <tr>
                      <th class="col-xs-4"><%= link_to chat.stylist.stylist_name, stylist_path(chat), class: "stylist-name" %></th>
                      <td class="col-xs-4"><%= link_to 'TALK', user_chat_path(chat), class: "chat btn btn-primary btn-xs" %></td>

                    </tr>
                  </table>


                  <% end %>
                </div>
                <div class="modal-footer">
                  <button type="button" class="chat btn btn-primary btn-xs" data-dismiss="modal">閉じる</button>
                </div>
              </div>
            </div>
          </div>

          <% end %>

          <%= link_to 'EDIT', edit_user_path(@user), class: "btn btn-primary btn-lg" %>
      </div>


      
    </div>


    <div class="row">

            <h2 class="styles">Favorite</h2>

            <div class="col-xs-12 col-sm-12 col-md-12">

              <% @user.posts.each do |post| %>
                    <div class="post">
                        <div class="blockarea">

                            <%= attachment_image_tag post, :post_image, :fill, 250, 250, format: 'jpeg' %>

                            <div class="caparea1">
                              <h3><%= post.post_name %></h3>
                              <h3><%= post.stylist.salon_name %></h3>
                              <p><%= link_to "SEE MORE", post_path(post.id) %></p>
                              <p>Favorit <%= post.favorites.count %>  View <%= post.impressionist_count %></p>


                            </div>
                        </div>
                    </div>
                <% end %>

              
            
            

            </div>
    
      </div>


      <div class="row">

            <h2 class="styles">Follow</h2>

           

              <% @user.stylists.each do |stylist| %>
              <table class="stylist-index">
              <th class="stylist-tab col-xs-2 col-md-2 col-lg-2"><%= attachment_image_tag stylist, :stylist_image, :fill, 100, 100, format: 'jpeg', fallback: "/images/stylist-fallback.jpeg" , class: "index-img" %><th>


              <td class="stylist-tab col-xs-2 col-md-2 col-lg-2"><%=link_to stylist.stylist_name , stylist_path(stylist), class: "stylist-name" %><hr class="under"></td>
              <td class="stylist-tab col-xs-2 col-md-2 col-lg-2"><%= stylist.salon_name %><hr class="under"></td>
              <td class="stylist-tab col-xs-2 col-md-2 col-lg-2"><%= stylist.stylist_region %><hr class="under"></td>
              <td class="stylist-tab col-xs-3 col-md-2 col-lg-2">Follow <%= stylist.follows.count %><hr class="under"></td>

            </table>
              <hr>
                <% end %>

              
            
            

          
    
      </div>








</div>



